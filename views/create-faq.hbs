<div id="create-review">
  <h1 class="my-h1"><strong>CREATE FAQ</strong></h1>
  
    {{#if errorMessages.length}}
    <p>Couldn't create the review because:</p>
    <ul>
      {{#each errorMessages}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  {{/if}}

  <form method="POST">
    <div class="form-group">
      <label class="form-label" for="input-example-1">Question</label>
      <input
        class="form-input"
        type="text"
        id="input-name"
        name="question"
        value="{{question}}"
        placeholder="Question"
      />
    </div>

    <div class="form-group">
      <label class="form-label">Answer</label>
      <textarea
        class="form-input"
        name="answer"
        id="input-review"
        placeholder="Answer"
        rows="3"
      ></textarea>
    </div>

    <div id="post">
      <input type="submit" value="Post">
    </div>
  </form>
</div>
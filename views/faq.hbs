<div id="resource-layout">
  {{#if dbError}}
    <p>Error: Internal server error</p>
  {{else}}
    {{#if isLoggedIn}}
      <ul>
        <div class="faq-question">
          <h3>Q .</h3>
          <h4 id="my-h4">{{faq.question}}</h4>
        </div>
        <div class="faq-answer">
          <h3>A .</h3>
          <h4 id="answer-h4">{{faq.answer}}</h4>
        </div>
      </ul>
      <div id="faq-edit">
        <form action="/faqs/delete/{{faq.id}}" method="POST">
          <input type="submit" value="Delete" />
        </form>
        <a id="button-style-a" href="/faqs/update/{{faq.id}}">Update</a>
      </div>
    {{/if}}
  {{/if}}
</div>
<div id="resource-layout">
  {{#if errorMessages.length}}
    <ul>
      {{#each errorMessages}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  {{/if}}
  {{#if dbError}}
    <p>Error: Internal server error</p>
  {{else}}
    {{#if isLoggedIn}}
      <form method="POST">
        <div class="form-group">
          <label class="form-label" for="input-example-1">Question</label>
          <input
            class="form-input"
            type="text"
            id="input-name"
            name="question"
            value="{{faq.question}}"
            placeholder="Question"
          />
        </div>
        <div class="form-group">
          <label class="form-label">Answer</label>
          <textarea
            class="form-input"
            name="answer"
            id="input-review"
            placeholder="Answer"
            rows="3"
          >{{faq.answer}}</textarea>
        </div>
        <div id="post">
          <input type="submit" value="Update" />
        </div>
      </form>
    {{/if}}
  {{/if}}
</div>
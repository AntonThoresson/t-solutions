<div id="create-review">
  {{#if errorMessages.length}}
    <p>Couldn't create the review because:</p>
    <ul>
      {{#each errorMessages}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  {{/if}}

  <form method="POST">
    <div class="form-group">
      <label class="form-label" for="input-example-1">Name</label>
      <input
        class="form-input"
        type="text"
        id="input-name"
        name="name"
        value="{{service.name}}"
        placeholder="Name"
      />
    </div>

    <div class="form-group">
      <label class="form-label">Description</label>
      <textarea
        class="form-input"
        name="description"
        id="input-review"
        placeholder="Description"
        rows="3"
      >{{service.description}}</textarea>
    </div>

    <div id="post">
      <input type="submit" value="Post" />
    </div>
  </form>
</div>